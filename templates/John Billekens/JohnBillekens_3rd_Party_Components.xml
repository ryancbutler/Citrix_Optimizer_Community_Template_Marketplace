    <description>Oracle Java settings</description>
    <entry>
      <name>Delete SunJavaUpdateSched (x64)</name>
      <description>Delete Java update check autostart</description>
      <execute>1</execute>
      <action>
        <plugin>Registry</plugin>
        <params>
          <name>SunJavaUpdateSched</name>
          <path>HKLM\SOFTWARE\Wow6432Node\Microsoft\Windows\CurrentVersion\Run</path>
