  <group>
    <id>Adobe</id>
    <displayname>Adobe</displayname>
    <description>Configures Adobe items</description>
    <entry>
      <name>Adobe Acrobat Update Task</name>
      <description>This task keeps your Adobe Reader and Acrobat applications up to date with the latest enhancements and security fixes</description>
      <execute>1</execute>
      <action>
        <plugin>SchTasks</plugin>
        <params>
          <name>Adobe Acrobat Update Task</name>
          <path>\</path>
          <value>Disabled</value>
        </params>
      </action>
    </entry>
